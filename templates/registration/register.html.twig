{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}

    <style>
        body {
            width : 100%;
            height : 100vh;
            background-image: url({{ asset('uploads/background_station.png') }});
            background-repeat: no-repeat;
            background-size: cover;
            font-family: 'Poppins', sans-serif;
        }


        .section {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100%;
        }

        .container {
            border-radius: 10px;
            background-color: rgba(255, 255, 255, 0.9);
            box-shadow: 0px 0px 10px rgba(0,0,0,0.5);
            padding: 50px;
            max-width: 700px;
        }

        h1 {
            text-align: center;
            font-size: 36px;
            color: #023E8A;
            margin-bottom: 30px;
        }

        h2 {
            font-size: 24px;
            text-align: center;
        }

        form {
            display: flex;
            flex-direction: column;
        }

        label {
            color: #023E8A;
        }

        input {
            border: none;
            border-bottom: 2px solid #023E8A;
            background-color: #F8F8F8;
            height: 40px;
            font-size: 16px;
            padding: 5px;
            width: 100%;
        }

        input:focus {
            outline: none;
        }

        button {
            margin-top: 20px;
            background-color: #023E8A;
            color: #fff;
            border: none;
            border-radius: 5px;
            font-size: 16px;
            padding: 10px 20px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        button:hover {
            background-color: #012d60;
        }

        a {
            color: #023E8A;
            font-size: 16px;
            text-decoration: none;
        }

        a:hover {
            text-decoration: underline;
        }

        .error {
            color: #FF6B6B;
            text-align: center;
            margin-bottom: 20px;
        }

        /* Responsive */

        @media screen and (max-width: 768px) {
            h1 {
                font-size: 50px;
            }
            label{
                font-size: 30px;
            }
            input {
                margin-bottom: 20px;
                height: 70px;
                font-size: 28px;
                padding: 15px;
            }
            button {
                font-size: 36px;
                padding: 30px 50px;
            }
            a {
                font-size: 36px;
            }
        }
    </style>

    <div class="section">
        <div class="container">
            <h1>S'inscrire</h1>
            <h2>Inscrivez-vous afin d'accéder à l'espace administrateur de votre station</h2>
            {{ form_start(registrationForm) }}
                {{ form_row(registrationForm.name) }}
                {{ form_row(registrationForm.email) }}
                {{ form_row(registrationForm.plainPassword, {
                    label: 'Password'
                }) }}
                {{ form_row(registrationForm.agreeTerms) }}

                <button type="submit">S'inscrire</button>
            {{ form_end(registrationForm) }}
            <a href="{{ path('app_login') }}">Se connecter
        </div>
    </div>

{% endblock %}
