{% extends 'base.html.twig' %}

{% block title %}{{ slope.name }}{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }

    .flex {
        display: flex;
        justify-content: space-between;
        background-color: #151D53;
        padding: 1rem;
        border-bottom: #0dcaf0;
    }

    h1{
        color: #efd01d;
        margin-left: 40px;
    }
    h2{
        background-color: red;
        color: white;
        padding: 10px 30px;
        border-radius: 30px;

    }
    h2>a{
        color: white;
        text-decoration: none;
    }
    h2:hover{
        transform: scale(1.2,1.2);
        transition: all 0.3s ease 0s;
    }

    .shesh{
        margin: 1rem;
        background-color: gray;
        padding: 1rem;
        border-radius: 30px;
        width: fit-content;
    }
    .shesh>a{
        text-decoration: none;
        color: white;

    }
</style>


    <div class="flex"><h1> Piste : {{ slope.name }} </h1></h1>
    <h2><a href="{{ path('app_logout') }}">Déconnexion</a></h2></div>
    <p class="shesh"><a href="{{ path('app_station', {'id': slope.station.id}) }}">Retour aux pistes</a></p>

<div class="example-wrapper">
    <ul>
        <li>Type: {{ slope.type }}</li>
        <li>Niveau: {{ slope.level }}</li>
        {% if slope.isopen %}
            <li>Piste Ouverte: Oui</li>
        {% else %}
            <li>Piste Ouverte: Non</li>
        {% endif %}
        <li>Message: {{ slope.message }}</li>
        {% if slope.isseason %}
            <li>Saison : Saison des ski</li>
            {% if slope.isopen %}
                <li>Ouvert de {{ slope.opening|date('H:i') }} à {{ slope.closing|date('H:i') }}</li>
            {% else %}
                <li>Fermé</li>
            {% endif %}
        {% else %}
            <li>Saison : Saison hors ski</li>
            <li>Fermé</li>
        {% endif %}
    </ul>

    <h2>Autre pistes de la station : {{ slope.station.name }} </h2>
    <ul>
        {% for s in slope.station.slopes %}
            {% if s.id != slope.id %}
                <li>
                    <a href="{{ path('app_slope', {'id': s.id}) }}">
                        {{ s.name }}
                    </a>
                </li>
            {% endif %}
        {% endfor %}
    </ul>

</div>
{% endblock %}
